<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_above="@+id/homeTab"/>

    <com.woodys.demo.widgets.TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize"
        android:background="@color/white"
        auto:dl_divideDrawable="@color/dividerColor"
        auto:dl_divideGravity="top"
        auto:th_color="@color/text_color"
        auto:th_selectColor="@color/colorPrimary"
        auto:th_textSize="10sp" />
</LinearLayout>